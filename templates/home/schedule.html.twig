<div class="row">
    <div class="col">
        <h2><i class="fas fa-futbol"></i>&nbsp;&nbsp;Spielplan</h2>
        <div class="alert alert-secondary alert-dismissible fade show" role="alert">
            <i class="fas fa-info"></i>&nbsp;&nbsp;Deine Tipps werden automatisch gespeichert, sobald du beide Tipps eingetragen hast. &nbsp;&nbsp;<button type="button" class="close" data-controller="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
        </div>
        <table class="table table-hover table-dark table-live">
            <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col" class="center-td">Spiel</th>
                <th scope="col" class="center-td">Dein Tipp</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for game in games %}
                <form id="{{ game.matchId }}" data-controller="tipp">
                <tr>
                    <td scope="row"><img src="/img/{{ game.team1 }}.png">&nbsp;&nbsp;&nbsp;&nbsp;{{ game.team1 }}</td>
                    <td class="center-td"></td>
                    <td class="center-td"><input type="number" class="input-score" maxlength="2" value="{{ game.tipTeam1 }}" size="2" min="0" max="20"></td>
                    <td rowspan="2"  style="vertical-align : middle;text-align:center;" class="last-td"><span class="score">{{ game.matchDatetime |date('d.m H:i') }}</span></td>
                </tr>
                <tr>
                    <td scope="row" class="last-td"><img src="/img/{{ game.team2 }}.png">&nbsp;&nbsp;&nbsp;&nbsp;{{ game.team2 }}</td>
                    <td class="center-td last-td">-</td>
                    <td class="center-td last-td"><input type="number" class="input-score" maxlength="2" value="{{ game.tipTeam2 }}" size="2" min="0" max="20"></td>
                </tr>
                </form>
            {% endfor %}
