{% extends 'base.html.twig' %}

{% block title %}User: {{ user.name }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h2 class="text-center"><i class="fas fa-users"></i>&nbsp;&nbsp;User: {{ user.name }} - </h2>
            <p>Platz: {{ user.position }} </p>
            <p>Punkte: {{ user.scoreSum }} </p>
            <p>Richtige Ergebnisse: {{ user.sumWinExact }} </p>
            <p>Tordifferenz: {{ user.sumScoreDiff }} </p>
            <p>Sieger: {{ user.sumTeam }} </p>

            <table class="table table-striped table-dark">
                <thead>
                <tr>
{#                    <th scope="col">Datum</th>#}
                    <th scope="col">Teams</th>
                    <th scope="col">Result</th>
                    <th scope="col">Tip</th>
                    <th scope="col">Punkte</th>
                </tr>
                </thead>
                <tbody>
                {% for tip in user.tips %}
                    <tr>
{#                        <th>{{ tip.matchId|split(' ', 2) }}</th>#}
                        <td>
                            <img src="/img/{{ tip.team1 }}.png">&nbsp;{{ tip.team1|trans }}
                            -
                            {{ tip.team2|trans }}&nbsp;<img src="/img/{{ tip.team2 }}.png">
                        </td>
                        <td>
                            {{ tip.scoreTeam1 }} - {{ tip.scoreTeam2 }}
                        </td>
                        <td>
                            {% if tip.tipTeam1 is null or tip.tipTeam2 is null %}
                                -  :  -
                            {% else %}
                                {{ tip.tipTeam1 }} : {{ tip.tipTeam2 }}
                            {% endif %}
                        </td>
                        <td>{{ tip.score }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
