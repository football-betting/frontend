{% extends 'base.html.twig' %}

{% block title %}Gewinner des Tages{% endblock %}

{% block body %}

<div class="row">
    <div class="col">

        <h1><i class="fas fa-medal"></i>&nbsp;&nbsp;Gewinner des Tages</h1>
        {% for dailyWinner in dailyWinners %}
            <table class="table table-striped table-dark">
                <thead>
                <tr>
                    <th scope="col" style="width: 50%">Name</th>
                    <th scope="col">Punkte am {{ dailyWinner.matchDate|date("d.m") }}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in dailyWinner.users %}
                <tr>
                    <th scope="row">
                        <a style="color: #FFF" href="{{ path('user_past_tips', {'username': user }) }}">
                            {{ user }}
                        </a>

                    </th>
                    <td class="text-primary">+ {{ dailyWinner.points }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            <br>
        {% endfor %}
    </div>
</div>

{% endblock %}
